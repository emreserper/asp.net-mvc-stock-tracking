@using StockTracking.Models.Entity
@model List<Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using(Html.BeginForm("Index","Product", FormMethod.Get))
{
        <p>
            Product Name: @Html.TextBox("p")
            <input class="btn btn-primary" type="submit" value="Search" />
        </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Stock</th>
        <th>Purchase Price</th>
        <th>Sale Price</th>
        <th>Category</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.id</td>
    <td>@x.name</td>
    <td>@x.brand</td>
    <td>@x.stock</td>
    <td>@x.puchase_price</td>
    <td>@x.sale_price</td>
    <td>@x.Categories.name</td>
    <td><a href="/Product/DeleteProduct/@x.id" class="btn btn-danger">Delete</a></td>
    <td><a href="/Product/GetProduct/@x.id" class="btn btn-success">Update</a></td>
</tr>
    }
</table>
<a href="/Product/NewProduct/" class="btn btn-primary">New Product</a>


